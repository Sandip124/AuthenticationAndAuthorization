@model IEnumerable<AuthenticationAndAuthorization.Models.EmailTemplateIndexViewModel>
@{

}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">Template</h5>

                </div>

                <div class="card-body ">
                    <div class="col-md-12">
                        <div class=" form-group">
                            <a class="btn btn-sm btn-info" asp-area="" asp-controller="EmailTemplate" asp-action="Create"><i class="fa fa-plus"></i> Add</a>
                        </div>
                        <table id="templateTable" class="  table-bordered ">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Type</th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td > @item.Id</td>
                                        <td > @item.Type</td>
                                       
                                        <td>
                                            <a class=" btn btn-info btn-sm">Edit</a>
                                            <a class=" btn btn-secondary btn-sm"target="_blank" asp-area="" asp-controller="EmailTemplate" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class=" btn btn-info btn-sm"target="_blank" asp-area="" asp-controller="EmailTemplate" asp-action="Preview" asp-route-roleId="@item.Id">Preview</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer ">

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{

    <script>
        $('#templateTable').dataTable({
        });
    </script>
}
